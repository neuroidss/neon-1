{
  "name": "@arcadecity/neon-desktop",
  "version": "0.0.1",
  "description": "Neon desktop app",
  "author": "Arcade City, Inc.",
  "license": "GPL-3.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "yarn lint && react-scripts-ts start",
    "build": "yarn lint && react-scripts-ts build",
    "test": "yarn lint && react-scripts-ts test --env=jsdom",
    "lint": "tslint --project . --fix",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "build --c.extraMetadata.main=build/electron.js",
    "preelectron-pack": "yarn build"
  },
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-scripts-ts": "2.17.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.9.4",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "concurrently": "^4.0.1",
    "electron": "^2.0.8",
    "electron-builder": "^20.28.4",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "wait-on": "^3.0.1"
  },
  "build": {
    "appId": "arcade.city.neon-desktop",
    "productName": "Neon",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
